<a href="/pokemon" class="btn btn-primary">Home</a>
<a href="/pokemon/new" class="btn btn-primary">New Pokemon</a>
<a href="/pokemon/red" class="btn btn-primary">Pokemon Red</a>
<a href="/pokemon/yellow" class="btn btn-primary">Pokemon Yellow</a>

<style>
    body {
        width: 100vw;
        height: 100vh;
        background-image: url("https://www.gamesdatabase.org/Media/SYSTEM/Nintendo_Game_Boy/Cart/Thumb/Thumb_Pokemon_-_Blue_Version_-_1998_-_Nintendo.jpg");

    }
</style>

<body>
    <div class="grid">
        {{#each pokemons}}
        <div class="card pokeCard" style="margin: 5px 2px; height: 225px ">
            <div>
                {{this.name}}
                <img src="{{this.img}}" style="width: 150px; height: 150px; display: block">
            </div>


            <div class="links">
                <a href="/pokemon/{{this.id}}/edit" class="btn btn-primary">Edit</a>

                <a href="/pokemon/{{this.id}}" class="btn btn-info"> View </a>

                <form action="/pokemon/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</body>